#include<iostream>
using namespace std;
int main(){
    int i,n;
// for the creation of the array
cout<<"Enter total number of elements";
cin>>n;
int *a=new int(n); // you create an  array
// now i have to put the values
cout<<"Enter "<<n<<" elements"<<endl;
for(i=0;i<n;i++){
    cin>>a[i];
}
cout<<"Entered elements are:";
for(i=0;i<n;i++)
{

    cout<<a[i]<<" ";
}
cout<<endl;
delete (a);
return 0;
}
